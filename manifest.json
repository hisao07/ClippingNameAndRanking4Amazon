{

  "manifest_version": 2,
  "name": "ClippingNameAndRanking",
  "version": "1.0",
 
  "description": "Copy product name and ranking to clipboard on amazon.co.jp .",
  "homepage_url": "https://github.com/hisao07/ClippingNameAndRanking4Amazon",
  
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "browser_action": {
    "default_icon": {
    "19": "icons/icon.svg",
    "38": "icons/icon.svg"
    },
    "default_title": "Clipping name & rancking"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.co.jp/*"],
      "js": ["jq/jquery-3.3.1.slim.min.js", "cnar.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}
