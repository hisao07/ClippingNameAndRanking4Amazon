{

  "manifest_version": 2,
  "name": "ClippingNameAndRanking",
  "version": "0.1.0",
 
  "description": "Copy product name and ranking to clipboard on amazon.co.jp .",
  "homepage_url": "https://github.com/hisao07/ClippingNameAndRanking4Amazon",
  
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "browser_action": {
    "default_icon": {
    "19": "icons/icon.svg",
    "38": "icons/icon.svg"
    },
    "default_title": "Clipping name & rancking"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.co.jp/*"],
      "js": ["cnar.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "notifications",
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}
